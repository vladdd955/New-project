{% extends 'layout.twig' %}
{% block content %}
    <h1>Welcome to Transfer Page</h1>

    <div style="color: #453C67">
        Welcome: {{ session.name }}
        <br>
        Your email: {{ session.email }}
        <br>
        Your id: {{ session.id }}
        <br>

        <br>
        <ul class="coin-list">
            {% for coins in coin %}
                <li>
                    <span class="font-semibold text-xl text-gray-800">{{ coins.getSymbol }}</span> -
                    <span class="text-gray-600">{{ coins.getCount }}</span>
                </li>
            {% endfor %}
        </ul>


    </div>

    <div class="email" style="margin: 20px;">
        <form class="search" action="/" method="get">
            <button style="border-radius: 20px;"
                    class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                Home
            </button>
        </form>
    </div>

{#    FORM #}

    <form action="/transfer" method="post" class="w-full max-w-sm">
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-full-name">
                    Person id to send crypto.
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="idToSend"  class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name" type="text" placeholder="id">
            </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                    Password
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="password" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-password" type="password" placeholder="******************">
            </div>
        </div>

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                    Amount
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="coinAmount" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  placeholder="enter amount">
            </div>
        </div>

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                    Coin Symbol
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="symbol" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  placeholder="enter coin symbol">
            </div>
        </div>

        <div class="md:flex md:items-center">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
                <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
                    Transfer
                </button>
            </div>
        </div>
    </form>

    <h2 style="color: red">{{ session.coinError }}</h2>
    <h2 style="color: red">{{ session.errors }}</h2>

{% endblock %}
