{% extends 'layout.twig' %}
{% block content %}
    <h1>Welcome to Short Page</h1>

    <div style="color: #453C67">
        Welcome: {{ session.name }}
        <br>
        Your email: {{ session.email }}
        <br>
        Your id: {{ session.id }}
        <br>
        Your balance: {{ walletInfo }} USD $

        <br>
        <ul class="coin-list">
            {% for info in shortInfo %}
                <li>
                    <span class="font-semibold text-xl text-gray-800">{{ info.getSymbol }}</span> -
                    <span class="text-gray-600">{{ info.getCount }}</span>
                </li>
            {% endfor %}
        </ul>

    </div>

    <div class="email" style="margin: 20px;">
        <form class="search" action="/" method="get">
            <button style="border-radius: 20px;"
                    class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">
                Home
            </button>
        </form>
    </div>

    {#    FORM #}


    <form action="/shortPage" method="post" class="w-full max-w-sm">

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                    Amount
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="shortBuy" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  placeholder="enter amount">
            </div>
        </div>

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                    Coin Symbol
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="symbol" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  placeholder="enter coin symbol">
            </div>
        </div>

        <div class="md:flex md:items-center">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
                <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
                   Open Short
                </button>
            </div>
        </div>
    </form>


{#    Close short FORM    #}

    <form action="/sellShortPage" method="post" class="w-full max-w-sm">

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                   Close amount
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="shortSell" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  placeholder="enter amount">
            </div>
        </div>

        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
                <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-password">
                    Coin Symbol
                </label>
            </div>
            <div class="md:w-2/3">
                <input name="symbol" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"  placeholder="enter coin symbol">
            </div>
        </div>

        <div class="md:flex md:items-center">
            <div class="md:w-1/3"></div>
            <div class="md:w-2/3">
                <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
                    Close Short
                </button>
            </div>
        </div>
    </form>

    <h2 style="color: red">{{ session.coinError }}</h2>

{% endblock %}
